{
  "manifest_version": 2,

  "name": "My Myo, Yo",
  "description": "Yes.",
  "version": "1.0",

  "permissions": [
    "<all_urls>",
    "tabs",
    "topSites",
    "storage"
  ],
  "browser_action": {
    "default_icon": "img/locked.png"
  },
  "options_page": "config.html",
  "icons": {
        "48": "img/logo.png"
  },
  "background": {
    "scripts": ["js/browserModes.js", "js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/foreground.js"]
    }
  ]
}
