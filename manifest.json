{
  "manifest_version": 2,

  "name": "My Myo, Yo",
  "description": "Yes.",
  "version": "1.0",

  "permissions": [
    "<all_urls>",
    "tabs",
    "topSites"

  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "img/icon48.png"
  },
  "options_page": "config.html",
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/foreground.js"]
    }
  ]
}